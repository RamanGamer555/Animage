<body>
  <header>ANIMAGE</header>

  <nav style="background:#1a1a1a; padding:15px; text-align:center;">
    <button id="showAllBtn" style="padding:10px 20px; border:none; border-radius:8px; background:#ff4ecb; color:#fff; margin-right:10px;">All Images</button>
    <button id="showFavBtn" style="padding:10px 20px; border:none; border-radius:8px; background:#ff4ecb; color:#fff;">Favourites</button>
  </nav>

  <section id="upload-section">
    <h2>Search Images</h2>
    <input type="text" id="searchBar" placeholder="Search anime images..." style="padding:10px;width:80%;max-width:400px;border-radius:8px;border:none;outline:none;">
    <h2>Upload Anime Images</h2>
    <h2>Upload Anime Images</h2>
    <input type="file" id="imageUpload" accept="image/*" multiple />
  </section>

  <div class="gallery" id="gallery"></div>

  <script>
    const uploadInput = document.getElementById('imageUpload');
    const gallery = document.getElementById('gallery');
    const searchBar = document.getElementById('searchBar');
    let imagesData = []; // Stores images, tags, fav state
    let loadedCount = 0;
    const LOAD_BATCH = 10;
    let favouriteList = JSON.parse(localStorage.getItem('favourites') || '[]'); = []; // Store images with tags and favourite state
    let loadedCount = 0; // infinite scroll counter
    const LOAD_BATCH = 10; // load 10 at a time

    uploadInput.addEventListener('change', function () {
      for (let file of this.files) {
        const reader = new FileReader();
        reader.onload = function (e) {
          const img = document.createElement('img');
          img.src = e.target.result;
          const card = document.createElement('div');
          card.className = 'img-card';
          const favBtn = document.createElement('div');
          favBtn.className = 'fav-btn';
          favBtn.innerText = favouriteList.includes(e.target.result) ? 'â¤ï¸' : 'ðŸ¤';
          favBtn.onclick = () => toggleFavourite(e.target.result, favBtn);

          const download = document.createElement('a');
          download.href = e.target.result;
          download.download = 'animage.jpg';
          download.className = 'download-link';
          download.innerText = 'Download';

          card.appendChild(img);
          card.appendChild(download);
          card.appendChild(favBtn);(img);
          card.appendChild(download);
          imagesData.push({ src: e.target.result, element: card, tags: generateTags(file.name), fav:false });({ src: e.target.result, element: card });
          // do not append immediately â€” infinite scroll handles it
          (card);(card);(img);
        };
        reader.readAsDataURL(file);
      }
    });
    searchBar.addEventListener('input', function () {
      const query = this.value.toLowerCase();
      imagesData.forEach(item => {
        if (query === '' || item.src.toLowerCase().includes(query)) {
          item.element.style.display = 'block';
        } else {
          item.element.style.display = 'none';
        }
      });
    });
    function generateTags(name){
      return name.split(/[-_ ]/).slice(0,3);
    }

    function renderImages(favOnly = false){
      gallery.innerHTML = '';
      loadedCount = 0;
      const filtered = favOnly ? imagesData.filter(i=> favouriteList.includes(i.src)) : imagesData;
      const slice = filtered.slice(0, LOAD_BATCH);
      slice.forEach(item=> gallery.appendChild(item.element));
      loadedCount = LOAD_BATCH;
    }(){
      const slice = imagesData.slice(loadedCount, loadedCount + LOAD_BATCH);
      slice.forEach(item=> gallery.appendChild(item.element));
      loadedCount += LOAD_BATCH;
    }

    window.addEventListener('scroll', () =>{
      if(window.innerHeight + window.scrollY >= document.body.offsetHeight - 100){
        const filtered = showingFavs ? imagesData.filter(i=> favouriteList.includes(i.src)) : imagesData;
        const slice = filtered.slice(loadedCount, loadedCount + LOAD_BATCH);
        slice.forEach(item=> gallery.appendChild(item.element));
        loadedCount += LOAD_BATCH;
      }
    });('scroll', () =>{
      if(window.innerHeight + window.scrollY >= document.body.offsetHeight - 100){
        renderImages();
      }
    });

    searchBar.addEventListener('input', function () {
      const query = this.value.toLowerCase();
      imagesData.forEach(item => {
        const match = item.tags.some(t => t.toLowerCase().includes(query)) || item.src.toLowerCase().includes(query);
        item.element.style.display = match ? 'inline-block' : 'none';
      });
    });

    // FAVOURITE SYSTEM
    let showingFavs = false;

    function toggleFavourite(src, btn){
      if(favouriteList.includes(src)){
        favouriteList = favouriteList.filter(x => x !== src);
        btn.innerText = 'ðŸ¤';
      } else {
        favouriteList.push(src);
        btn.innerText = 'â¤ï¸';
      }
      localStorage.setItem('favourites', JSON.stringify(favouriteList));
    }

    document.getElementById('showAllBtn').onclick = () =>{
      showingFavs = false;
      renderImages(false);
    }

    document.getElementById('showFavBtn').onclick = () =>{
      showingFavs = true;
      renderImages(true);
    }

    // First batch rendering
    renderImages();
  </script>
</body>
